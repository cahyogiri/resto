<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Menu</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
</head>
<body>
    <div class="container text-center">
        <h1>Menu</h1>
        <div class="container text-end">
            <input type="button" onclick="location.href='http://localhost:3000/menu/new';" value="Add New" />
        </div><br>
        <table class="table table-bordered">
                <thead>
                    <tr>
                      <th scope="col">No</th>
                      <th scope="col">Nama</th>
                      <th scope="col">Harga</th>
                      <th scope="col">Action</th>
                    </tr>
                </thead>
                <% DB.forEach(function(data){ %>
                <tbody class="table align-middle">
                    <tr>
                        <th scope="row"><%= data.id%></th>
                        <td><%= data.nama%></td>
                        <td><%= data.harga%></td>
                        <td> 
                            <a href="/menu/<%= data.id%>/edit" class="btn btn-outline-info">Ubah</a>
                            <a href="/menu/<%= data.id%>/delete" class="btn btn-outline-danger">Hapus</a> 
                        </td>
                    </tr>
                </tbody>
                <% }); %>
            </div> 
        </table>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script> 
</body>
</html>



